@using Weredev.UI.Controllers
@{
    Layout = "_WorldTravelerLayout";
}
@model Weredev.UI.Models.WorldTraveler.ListCitiesResponse

<a asp-action="Index">
    <h2>world traveler</h2>
</a>
<h3>@(Model.CountryName)</h3>
<div class="row list-table">
    @foreach (var city in @Model.Cities.OrderBy(x => x.CityName)) {
        <div class="col-lg-6 col-sm-12 mt-3 list-row">
            <div class="col-lg-4 col-sm-12 list-cell-image">
                <a asp-action="@nameof(WorldTravelerController.ListAlbums)" asp-route-countrykey="@Model.CountryKey"
                    asp-route-citykey="@city.CityKey"><img src='@(city.IconUrl)' class='border border-dark' alt="@(city.CityName)" /></a>
            </div>
            <div class="col-lg-8 col-sm-12 list-cell-name">
                <h4 class='mt-1'><a asp-action="@nameof(WorldTravelerController.ListAlbums)" asp-route-countrykey="@Model.CountryKey"
                    asp-route-citykey="@city.CityKey">@(city.CityName)</a></h4>
                <div class="list-cell-name-description">@(city.Description)</div>
            </div>
        </div>
    }
</div>