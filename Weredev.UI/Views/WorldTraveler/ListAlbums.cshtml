@{
    Layout = "_WorldTravelerLayout";
}
@model Weredev.UI.Models.WorldTraveler.ListAlbumsResponse

@{
    var currentPath = Context.Request.Path.Value.TrimEnd('/');
}

<a href="@(currentPath)/..">
    <h2>world traveler</h2>
</a>
<h3>@(Model.CountryName) | @(Model.CityName)</h3>
<table class="city-list-table">
    @foreach(var album in Model.Albums.OrderBy(x => x.Name))
    {
        <tr>
            <td class="city-list-cell-left">
                <a href="@(currentPath)/@album.Key">
                    <img src="@album.IconUrl" class="border border-dark" />
                </a>
            </td>
            <td class="city-list-cell-right">
                <a href="@(currentPath)/@album.Key">
                    <h4 class='mt-1'>@album.Name</h4>
                </a>
                @album.Description
            </td>
        </tr>
    }
</table>