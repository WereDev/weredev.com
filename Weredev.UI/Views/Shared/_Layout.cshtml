<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>weredev | @ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/lumen/bootstrap.min.css" rel="stylesheet" integrity="sha384-715VMUUaOfZR3/rWXZJ9agJ/udwSXGEigabzUbJm2NR4/v5wpDy8c14yedZN6NL7" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/site.css" asp-append-version="true">
    @RenderSection("stylesheets", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div>
        <header class="app-header text-center">
            <div class="header-image">
                <img src="/images/header.jpg" style="width: 100%" />
            </div>
            <h1 class="app-title">
                <a href="/">weredev</a> 
            </h1>
        </header>
        <div class="app-body">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
