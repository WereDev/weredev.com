<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>weredev | @ViewData["Title"]</title>
    <base href="~/" />
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.3/lux/bootstrap.min.css" rel="stylesheet" integrity="sha384-ML9h/UCooefre72ZPxxOHyjbrLT1xKV0AHON1J+OlOV2iwcYemqmWyMfTcfyzLJ1" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/site.css">
    @RenderSection("stylesheets", required: false)
</head>
<body>
    <div>
        <header class="app-header text-center">
            <div class="header-image">
                <img src="/images/header.jpg" style="width: 100%" />
            </div>
            <h1 class="app-title">
                <a href="/">weredev</a> 
            </h1>
        </header>
        <div class="app-body">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
